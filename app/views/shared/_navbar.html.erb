<nav data-controller="navbar"
    class="flex items-center justify-between w-full p-1 border-b dark:border-neutral-800">
  <div class="flex items-center gap-x-1">
    <% @filters.each do |filter| %>
      <div data-root-target="filter"
          class="flex items-center h-8 px-3 text-neutral-400 hover:text-neutral-900 hover:bg-neutral-200 hover:dark:text-white dark:hover:bg-neutral-700/50 backdrop-filter backdrop-blur rounded-lg">
        <% if filter == 'Inbox' %>
          <p class="text-xs font-medium"><%= filter %><span class="ml-1 text-sky-500"><%= @email_threads.count if filter == 'Inbox' %></span></p>
        <% else %>
          <p class="text-xs font-medium"><%= filter %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>
