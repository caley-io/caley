<!-- TODO: Clean this up w/ custom CSS instead of Tailwind (for keyboard nav) -->
<!-- TODO: Replace border-b with a divider -->
<div data-root-target="listItem"
    aria-selected="false"
    class="group flex items-center justify-between h-[44px] pl-2 pr-6 aria-selected:bg-highlight hover:bg-highlight border-b border-borderPrimary">
  <div class="flex items-center gap-x-2 truncate text-[13px]">
    <!-- TODO: Add checkbox -->
    <input type="checkbox" class="rounded bg-base border border-neutral-600 opacity-0 group-hover:opacity-100">

    <%= render "small_profile_placeholder", color: [ "amber", "blue", "green", "purple", "red" ].sample.to_sym, name: message.sender_name.first %>
    <p class="w-40"><%= message.sender_name %></p>
    <!-- <p class="text-neutral-500 truncate"><%= message.subject.presence || "No Subject" %></p> -->
    <p class="truncate"><%= message.body %></p>
  </div>
  <div class="flex justify-end ml-2.5">
    <p class="truncate text-xs font-medium text-neutral-500 aria-selected:text-white"><%= format_date(message.created_at) %></p>
  </div>
</div>
